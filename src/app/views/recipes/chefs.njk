{% extends "layout.njk" %}


{% block content%}

    <section class="content">
        <div class="cards-chefs">
            
            {% for chef in chefs %}
                <div class="card-chef" id="{{chef.id}}" >
                    <div class="circle">
                    <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                    </div>
                    <div>
                        <h4 class="content">{{chef.name}}</h4>
                        <p class="info">por {{chef.name}}</p>               
                    </div>
                </div>
            {% endfor %}
            
        </div>
    </section>
{% endblock %}