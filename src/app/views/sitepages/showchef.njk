{% extends "layout.njk" %}

{% block content %}
    <section class="section-button-editchef">
        <p>Chef: {{chef.name}}</p>
    </section>
    <section>
        <div class="bigcircle">
            {% if chef.avatar_url %}
             <img src="{{filechef.src}}">   
            {% else %}
            <span style="background-image: url(http://placehold.it/500x500?text=ImageNotFound)"></span>    
            {% endif %}
        </div>

        <div class="title-rec">
            <h1 class="content">{{chef.name}}</h1>
            <p class="info">
                {% if chef.total_recipes > 1 %}
                {{chef.total_recipes}} receitas
                {% else %}
                {{chef.total_recipes}} receita
                {% endif %}
            </p>    
        </div>        
    </section>
    <section class="content">
        {% if recipes.length > 0 %}
        <h1>Receitas</h1>
        <div class="cards-all">
                
            {% for recipe in recipes %}
                <div class="card-adm" id='{{recipe.id}}'>
                    {% if filesRecipe.src %}
                    <img src="{{filesRecipe.src}}" >
                    {% else %}
                    <img src="http://placehold.it/500x500?text=RECEITA SEM FOTO"/>
                    {% endif %}
                    <div class="card-info">
                        <h4 class="content">{{recipe.title}}</h4>
                        <p class="info">por {{chef.name}}</p>
                        <a href="/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}

        </div>
        {% endif %}
    </section>

{% endblock %}