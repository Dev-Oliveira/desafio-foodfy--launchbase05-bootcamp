{% extends "layoutAdm.njk" %}

{% block content %}
    <section class="section-button-editchef">
        <p>Chef: {{chef.name}}</p>
        <a class="button" href="{{chef.id}}/edit">Editar chef</a>
    </section>
    <section>
        <div class="bigcircle">
            <span style="background-image: url({{chef.avatar_url}})"></span>
        </div>

        <div class="title-rec">
            <h1 class="content">{{chef.name}}</h1>
            <p class="info">
                {% if chef.total_recipes > 1 %}
                {{chef.total_recipes}} receitas
                {% else %}
                {{chef.total_recipes}} receita
                {% endif %}
            </p>
        </div>        
    </section>
    <section class="content">
        {% if recipes.length > 0 %}
        <h1>Receitas </h1>
        <div class="cards-all">
            {% for recipe in recipes %}
                <div class="card-adm" id='{{recipe.id}}'>
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                    <div class="card-info">
                        <h4 class="content">{{recipe.title}}</h4>
                        <p class="info">por {{chef.name}}</p>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% endif %}
    </section>

{% endblock %}